<% include ../partials/head %>
    <style>

    </style>
    <div class="container">
        <!-- Content here -->
        <div class="card justify-content-center mt-3">
            <div class="container card-body">

                <div class="card container justify-content-center bg-light mb-3">
                    <div class="card-header text-center text-primary">
                        <h3 id="titleId">
                            <%= result.listingTitle%>
                        </h3>
                    </div>
                    <% if (result.isActive == false) { %>
                        <div class="my-4 text-danger text-center jumbotron">
                            <h1 class="warning">This listing is closed!</h1>
                        </div>
                        <% } %>
                            <div class="col">

                                <div class="row container">
                                    <div class="row">
                                        <div class="col m-4">
                                            <div class="imageBox" style="width: 35rem; box-sizing: content-box;">
                                                <img src=<% result.imgName %> class="card-img" alt="...">
                                            </div>
                                        </div>

                                        <div class="col m-4">
                                            <div class="container">
                                                <div class="col">
                                                    <div class="row">
                                                        <div class="form">
                                                            <div class="form-group row">
                                                                <a class="text-dark" href="/user/public/profile/id=<%=result.sellerID%>">
                                                                    <h4 class="mr-2" id="userId">Seller:</h4>
                                                                    <div class="col">
                                                                        <h4 id="usernameText">
                                                                            <%= result.sellerUsername%>
                                                                        </h4>
                                                                </a>
                                                                </div>
                                                            </div>
                                                            <div class="form-group row">
                                                                <h4 id="priceId">Price: AUD $</h4>
                                                                <h4 id="priceText">
                                                                    <%= result.listingPrice%>
                                                                </h4>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">

                                                            <div class="product-form__item product-form__item--quantity">
                                                                <label for="Quantity"><h4>Quantity:</h4></label>
                                                                <input type="number" id="Quantity" name="quantity" value="1" min="1" max="1000" class="product-form__input" pattern="[0-9]*">
                                                                <% result.purchaseQuantity %>
                                                                    </input>
                                                            </div>

                                                        </div>
                                                        <div class="form-group row">
                                                            <h4 class="mr-2" id="remainId">Stock Avaliable: </h4>
                                                            <h4 id="remainingStockText">
                                                                <%= result.remainingStock%>
                                                            </h4>
                                                        </div>
                                                    </div>

                                                </div>


                                                <% if (result.isActive) { %>

                                                    <% if (user != null) { %>

                                                        <% if (isAdmin || user.id == result.sellerID) { %>
                                                            <div class="row my-3 mx-auto">
                                                                <button id="modifyListingBtn" class="btn btn-dark btn-lg">Modify</button>
                                                            </div>

                                                            <div class="row my-3 mx-auto">
                                                                <button id="closeListingBtn" class="btn btn-dark btn-lg">Close Listing</button>
                                                            </div>
                                                            <% } %>

                                                                <% if (user.id != result.sellerID) { %>
                                                                    <div class="row my-3 mx-auto">
                                                                        <button id="purchaseBtn" class="btn btn-dark btn-lg" onclick="window.location.href='/listing/purchase=<%= result.listingID%>&quantity='+ $('#Quantity').val();">Purchase</button>
                                                                    </div>
                                                                    <% } %>
                                                                        <% } else { %>
                                                                            <div class="row my-3 mx-auto">
                                                                                <button disabled class="btn btn-dark btn-lg">Sign in to Purchase</button>
                                                                            </div>
                                                                            <% } %>

                                                                                <% } else if (isAdmin) { %>
                                                                                    <div class="row my-3 mx-auto">
                                                                                        <button id="openListingBtn" class="btn btn-dark btn-lg">Reopen Listing</button>
                                                                                    </div>
                                                                                    <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div id="descriptionCard" class="card m-4" style="width: 1000px; height: 380px;">
                                    <p id="descriptionParagraph" class="card-text m-4">
                                        <%= result.listingDescription%>
                                    </p>
                                </div>
                            </div>
                </div>
            </div>
        </div>
    </div>
    </div>

    <% if (isAdmin || (user != null && user.id == result.sellerID)) { %>
        <script src="/public/listing/listingResult.js" type="text/javascript"></script>
        <% } %>

            <% include ../partials/foot %>