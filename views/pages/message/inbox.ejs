<html>
    <head>
        <meta charset="utf-8">
        <meta content="width=device-width, initial-scale=1, shrink-to-fit=no" name="viewport">
    
        <!-- Bootstrap -->
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
		<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        
        <link href="/styles/js2.css" rel="stylesheet">
        <link href="/styles/sidebar.css" rel="stylesheet">
        <title>Inside</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    </head>

    <body>
        <%- include ../../partials/topBar %>
        
        <div class="side-nav">
            <a class="side-nav-selected" href="./inbox">Inbox</a>
            <a href="./sentMessages">Sent messages</a>
        </div>

        <div class="main-content my-4">

            <div class="text-bold text-primary">
                <h2><bold>Inbox</bold></h2>
            </div>
            <hr>

            <div class="my-4">
                <a href="./contact">
                    <button class="btn btn-primary">
                        Create New Message
                    </button>
                </a>
            </div>

            <table class="table table-hover" >
                <thead>
                <tr>
                    <th scope="col">Send From</th>
                    <th scope="col">Title</th>
                    <th scope="col">Date</th>
                </tr>
                </thead>
                <tbody>
                    <% for (message of messages) { %>
                        <tr onclick="window.location.href = '/message/id=<%= message.id%>'">
                            <td><%=message.usernameFrom%></td>
                            <td><%=message.header%></td>
                            <td><%=message.date.toLocaleString()%></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </body>
</html>