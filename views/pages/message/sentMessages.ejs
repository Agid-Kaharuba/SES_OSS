<html>
    <head>
        <meta charset="utf-8">
        <meta content="width=device-width, initial-scale=1, shrink-to-fit=no" name="viewport">
    
        <!-- Bootstrap CSS -->
        <link crossorigin="anonymous" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
                integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" rel="stylesheet">
        <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
        <link href="/styles/js2.css" rel="stylesheet">
        <link href="/styles/sidebar.css" rel="stylesheet">
        <title>Nu-Tech | My Outbox</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    </head>

    <body>
        <%- include ../../partials/topBar %>
        
        <div class="side-nav">
            <a href="./inbox">Inbox</a>
            <a class="side-nav-selected" href="./sentMessages">Sent messages</a>
        </div>

        <div class="main-content my-4">

            <div class="text-bold text-primary">
                <h2><bold>Sent Messages</bold></h2>
            </div>
            <hr>

            <div class="my-4">
                <a href="./contact">
                    <button class="btn btn-primary">
                        Create New Message
                    </button>
                </a>
            </div>

            <table class="table table-hover" >
                <thead>
                <tr>
                    <th scope="col">Sent To</th>
                    <th scope="col">Title</th>
                    <th scope="col">Date</th>
                </tr>
                </thead>
                <tbody>
                    <% for (message of messages) { %>
                        <tr onclick="window.location.href = '/message/id=<%= message.id%>'">
                            <td><%=message.usernameTo%></td>
                            <td><%=message.header%></td>
                            <td><%=message.date.toLocaleString()%></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </body>
</html>