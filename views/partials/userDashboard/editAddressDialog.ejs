<div id="<%=dialogID%>" class="modal fade" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Edit Address</h5>
            </div>

            <form action="/user/profile/editAddress" method="POST">

                <div class="modal-body">

                    <input type="hidden" name="id" value="<%=address.id%>"><br>

                    Address Line 1:<br>
                    <input type="text" name="addressLine1" value="<%=address.addressLine1%>"><br>
                    Address Line 2:<br>
                    <input type="text" name="addressLine2" value="<%=address.addressLine2%>"><br>
                    City:<br>
                    <input type="text" name="city" value="<%=address.addressCity%>"><br>
                    State:<br>
                    <input type="text" name="state" value="<%=address.addressState%>"><br>
                    Country:<br>
                    <input type="text" name="country" value="<%=address.addressCountry%>"><br>
                    Post Code:<br>
                    <input type="text" name="postcode" value="<%=address.addressPostcode%>"><br>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-dismiss="modal" type="button">Close</button>
                    <input type="submit" value="Submit" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
</div>