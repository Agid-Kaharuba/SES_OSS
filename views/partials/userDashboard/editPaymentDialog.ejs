<div id="<%=dialogID%>" class="modal fade" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Edit Payment</h5>
            </div>

            <form action="<%=editPaymentPath%>" method="POST">

                <div class="modal-body">
                        
                    <input type="hidden" name="id" value="<%=payment.id%>"><br>

                    Nickname:<br>
                    <input type="text" name="nickName" value="<%=payment.paymentNickname%>"><br>
                    Cardholder Name:<br>
                    <input type="text" name="name" value="<%=payment.paymentName%>"><br>
                    Card Number:<br>
                    <input type="text" name="number" value="<%=payment.paymentCardNumber%>"><br>
                    Expiry:<br>
                    <% 
                        let expiryDate;
                        if (payment.paymentExp) 
                        {
                            expiryDate = payment.paymentExp.toLocaleString().split(',')[0].split('/').reverse().join('-');
                        }
                        else
                        {
                            expiryDate = "No expiry date found";
                        }
                     %>
                    <input type="date" name="exp" value="<%=expiryDate%>"><br>
                    CVV:<br>
                    <input type="text" name="cvc" value="<%=payment.paymentCVC%>"><br>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-dismiss="modal" type="button">Close</button>
                    <input type="submit" value="Submit" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
</div>