			<div class="col-lg-12 col-md-12 col-sm-12 col-12 form-group mx-auto">
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span>Search Results</span>
          
          </h4>
          <ul class="list-group mb-3">
            <li class="list-group-item d-flex lh-condensed">
                <div class="btn-group" role="group" aria-label="Basic example">
                    <button type="button" class="btn btn-secondary">All Listings</button>
                    <button type="button" class="btn btn-secondary">Offers</button>
                    <button type="button" class="btn btn-secondary">Buy it Now</button>
                    <button type="button" class="btn btn-secondary">Sellers</button>
                  </div>
            </li>
            <% if(listings.length == 0) {%>
                <p>There are no results for your search</p>
               <%} %>

            <% listings.forEach(function(listing) { %>
              <li id="group1" class="list-group-item d-flex justify-content-between lh-condensed">
                  <div class="card" style="width: 18rem;">
                    <img src="/attachment/IMG/<%= listing.listingImg%>" class="card-img-top" alt="...">
                    <div class="card-body">
                   
                    </div>  
                  </div>
                <div>
                  <h3><a id="sellerTitle" window.location.href="'/listing/id=' + $(sellerTitle).val()" style="position: relative; right: 500px;"><%= listing.listingTitle %></a></h3>
                  <h5 class="text-muted"><a href="#"><%= listing.sellerUsername %></a></h5>
                  <p id= "d0"> <%= listing.listingDescription %> </p>
                  <h4 class="text-muted"><%= listing.remainingStock%> </h4>
                  <h4 class="text-muted"><%= listing.sellerPrice%> </h4>
                  <h5 id="priceID"><%= listing.listingPrice %></h5>
                </div>
              </li>
            <% }); %>
          </ul>
